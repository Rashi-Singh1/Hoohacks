<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.ematiyuk.expensetracer"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="26" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.github.ematiyuk.expensetracer.activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.ematiyuk.expensetracer.activities.SettingsActivity"
            android:parentActivityName="com.github.ematiyuk.expensetracer.activities.MainActivity"
            android:screenOrientation="portrait" >

            <!-- Parent activity meta-data to support Android 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name="com.github.ematiyuk.expensetracer.activities.CategoryEditActivity"
            android:parentActivityName="com.github.ematiyuk.expensetracer.activities.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible" >

            <!-- Parent activity meta-data to support Android 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name="com.github.ematiyuk.expensetracer.activities.ExpenseEditActivity"
            android:parentActivityName="com.github.ematiyuk.expensetracer.activities.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible" >

            <!-- Parent activity meta-data to support Android 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>

        <provider
            android:name="com.github.ematiyuk.expensetracer.providers.ExpensesProvider"
            android:authorities="com.github.ematiyuk.expensetracer.provider" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.0.1" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.github.ematiyuk.expensetracer.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>